---
import Layout from '~/layouts/PageLayout.astro';
import Hero2 from '~/components/widgets/Hero2.astro';
import Features3 from '~/components/widgets/Features3.astro';
// import Prices from '~/components/widgets/Pricing.astro';
import Sponsors from '~/components/widgets/Sponsors.astro';

const metadata = {
  title: 'Apex High School Dance Boosters',
};
---

<Layout metadata={metadata}>
  <!-- Hero2 Widget ******************* -->

  <Hero2
    tagline="Donation & Sponsorship Opportunities"
    title="Become a Dance Booster!"
    subtitle="By becoming a sponsor, you would be investing in the future of the arts and helping these young dancers realize their full potential."
    actions={[
      {
        variant: 'primary',
        text: 'Become a Booster',
        href: 'https://apex-hs-dance-boosters.square.site/',
        icon: 'tabler:heart-spark',
      },
      { text: 'View Our Sponsors', href: '#sponsors' },
    ]}
    image={{
      src: '~/assets/images/IMG_7038.png',
      alt: 'dancers supporting one another in the school studio',
      class: 'object-cover rounded-xl mx-auto w-full h-screen',
    }}
  />

  <!-- Features3 Widget ************** -->

  <Features3
    title="Booster Benefits"
    subtitle="Discover the advantages of giving"
    columns={2}
    items={[
      {
        title: 'Charitable giving',
        description: 'We are a 501(3)c organization so your donation is tax deductible.',
        icon: 'tabler:tax',
      },
      {
        title: 'Promote your business',
        description:
          'Reach your target market with our advertising through concerts, programs, the website, and social media.',
        icon: 'tabler:speakerphone',
      },
      {
        title: 'Help students grow',
        description:
          'Help grow our dance program as a way of giving back to our youth and seeing our community thrive. This includes dance classes and intensive for dancers as well as performances open to the school and town.',
        icon: 'tabler:seeding',
      },
      {
        title: 'Make an impact',
        description:
          'By supporting dance at Apex High, you help create accessible arts opportunities for students in our community, including those who might not otherwise afford private lessons.',
        icon: 'tabler:users-group',
      },
    ]}
    classes={{ container: 'max-w-5xl' }}
  />

  <!-- Sponsors Widget ****************** -->

  <Sponsors
    id="sponsors"
    title="Our Incredible Community Sponsors"
    tagline="2024-2025 Sponsors"
    subtitle="We are 🏔️ PEAK proud of our community boosters! All of our funding comes from parents and businesses like yours."
  />
</Layout>
